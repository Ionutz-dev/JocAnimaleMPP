<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.client.gui.LoginController"
      spacing="15" alignment="CENTER"
      style="-fx-padding: 30; -fx-background-color: #ffffff;">

    <Label text="🔐 Login"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <TextField fx:id="usernameField"
               promptText="Username"
               style="-fx-pref-width: 250; -fx-font-size: 14px;"/>

    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   style="-fx-pref-width: 250; -fx-font-size: 14px;"/>

    <Button text="Login"
            onAction="#handleLogin"
            style="-fx-background-color: #3498db; -fx-text-fill: white;
                   -fx-font-weight: bold; -fx-pref-width: 250; -fx-font-size: 14px;"/>
</VBox>
